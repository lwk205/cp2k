&GLOBAL
  PROJECT Periclase
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  &PRINT
    &FORCES
    &END
  &END
  METHOD Quickstep
  &DFT
    &QS
      METHOD PM6
      &SE
        &COULOMB
          CUTOFF [angstrom] 4.1000
        &END
      &END
    &END QS
    &SCF
      MAX_SCF 30
      EPS_SCF 1.0E-5
      SCF_GUESS mopac
      &OT 
        MINIMIZER CG
        LINESEARCH 3PNT
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 20
      &END
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      CELL_FILE_NAME  ../sample_cif/Periclase.cif
      CELL_FILE_FORMAT CIF
    &END CELL
    &TOPOLOGY
      COORDINATE CIF
      COORD_FILE_NAME  ../sample_cif/Periclase.cif
      CONNECTIVITY OFF
      &DUMP_PDB
      &END
      &DUMP_PSF
      &END
    &END
    &PRINT
      &CELL
        UNIT angstrom
      &END
      &TOPOLOGY_INFO
        CIF_INFO
      &END
      &KINDS
        BASIS_SET
        POTENTIAL
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
