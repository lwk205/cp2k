&GLOBAL
  PROJECT  H2O-ri-rpa-lr
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    POTENTIAL_FILE_NAME  POTENTIAL
    &MGRID
      CUTOFF  100
      REL_CUTOFF  30
    &END MGRID
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 100
      &PRINT
        &RESTART OFF
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
      &HF
        FRACTION 1.0000000
        &SCREENING
          EPS_SCHWARZ 1.0E-6
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
      &END HF
      &WF_CORRELATION
        METHOD  RI_RPA_GPW
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE LONGRANGE
          OMEGA 0.5
        &END INTERACTION_POTENTIAL
        &WFC_GPW
          CUTOFF  100
          REL_CUTOFF 20
          EPS_GRID 1.0E-6
          EPS_FILTER 1.0E-6
        &END
        &RI_RPA
          RPA_NUM_QUAD_POINTS 8
          MINIMAX
          &HF
            FRACTION 1.0000000
            &SCREENING
              EPS_SCHWARZ 1.0E-6
              SCREEN_ON_INITIAL_P FALSE
            &END SCREENING
          &END HF
        &END RI_RPA
        MEMORY  200.
        NUMBER_PROC  1
        DO_SVD
        EPS_SVD 1.0E-15
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  6.000   6.000  6.000
      PERIODIC XYZ
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  H2O_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
