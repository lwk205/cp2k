&GLOBAL
  PROJECT SiH4-PBE0-admm-pseudo
  PRINT_LEVEL LOW
  RUN_TYPE ENERGY
&END GLOBAL
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME  EMSL_BASIS_SETS
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    BASIS_SET_FILE_NAME  BASIS_ADMM
    POTENTIAL_FILE_NAME  POTENTIAL
    AUTO_BASIS RI_XAS    MEDIUM

    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON

    &AUXILIARY_DENSITY_MATRIX_METHOD
      METHOD BASIS_PROJECTION
      ADMM_PURIFICATION_METHOD MO_DIAG
    &END AUXILIARY_DENSITY_MATRIX_METHOD

    &QS
      METHOD GAPW
    &END QS

    &SCF
      &OT 
         PRECONDITIONER FULL_ALL
         ENERGY_GAP 0.01
      &END OT
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
         &PBE
            SCALE_C 1.0
            SCALE_X 0.75
         &END PBE
      &END XC_FUNCTIONAL
      &HF
         FRACTION 0.25
      &END HF
    &END XC

    &XAS_TDP
      &DONOR_STATES
         DEFINE_EXCITED BY_KIND
         KIND_LIST Si
         STATE_TYPES 1s
         STATE_TYPES 2s
         N_SEARCH 5
      &END DONOR_STATES

      TAMM_DANCOFF
      DIPOLE_FORM LENGTH
      GRID Si 150 150
      
      &KERNEL
         &XC_FUNCTIONAL
            &LIBXC
               FUNCTIONAL GGA_X_PBE
               SCALE 0.75
            &END LIBXC
            &LIBXC
               FUNCTIONAL GGA_C_PBE
            &END LIBXC
         &END XC_FUNCTIONAL
         &EXACT_EXCHANGE
            OPERATOR COULOMB
            FRACTION 0.25
         &END EXACT_EXCHANGE
      &END KERNEL
    &END XAS_TDP

  &END DFT
  &SUBSYS
    &KIND Si
      BASIS_SET Ahlrichs-def2-SVP
      BASIS_SET AUX_FIT Ahlrichs-def2-SVP
      POTENTIAL ALL
    &END KIND
    &KIND H
      BASIS_SET SZV-MOLOPT-SR-GTH
      BASIS_SET AUX_FIT FIT3
      POTENTIAL GTH-PBE
    &END KIND
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      Si   0.000000    0.000000    0.000000
      H    0.853686    0.853686    0.853686
      H   -0.853686   -0.853686    0.853686
      H   -0.853686    0.853686   -0.853686
      H    0.853686   -0.853686   -0.853686
    &END COORD
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
