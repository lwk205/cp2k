!Note: TDDFT is not meant to be applied to high spin ground state systems
&GLOBAL
  PROJECT CH3-PBE-uks
  PRINT_LEVEL LOW
  RUN_TYPE ENERGY
&END GLOBAL
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME  EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME  POTENTIAL
    AUTO_BASIS RI_XAS HUGE

    UKS
    MULTIPLICITY 2

    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END POISSON

    &QS
      METHOD GAPW
    &END QS

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

    &XAS_TDP
      &DONOR_STATES
         DEFINE_EXCITED BY_KIND
         KIND_LIST C
         STATE_TYPES 1s
         N_SEARCH 1
      &END DONOR_STATES

      TAMM_DANCOFF
      DIPOLE_FORM LENGTH
      GRID C 300 300
      EXCITATIONS OS_SPIN_CONS
      N_EXCITED 12
      
      &KERNEL
         RI_RADIUS 3.0
         &XC_FUNCTIONAL
            &LIBXC
               FUNCTIONAL GGA_X_PBE
            &END LIBXC
            &LIBXC
               FUNCTIONAL GGA_C_PBE
            &END LIBXC
         &END XC_FUNCTIONAL
      &END KERNEL

    &END XAS_TDP

  &END DFT
  &SUBSYS
    &KIND C
      BASIS_SET 6-31G*
      POTENTIAL ALL
    &END KIND
    &KIND H
      BASIS_SET 6-31G*
      POTENTIAL ALL
    &END KIND
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      C   0.1   0.2   0.3
      H   0.5   0.6   0.7
      H  -0.5  -0.6  -0.7
      H   0.5  -0.5   0.5
    &END COORD
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
