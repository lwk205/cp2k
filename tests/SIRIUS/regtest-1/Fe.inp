&FORCE_EVAL
  METHOD SIRIUS
  &PW_DFT
    &CONTROL
      cyclic_block_size 16
      processing_unit cpu
      std_evp_solver_type lapack
      gen_evp_solver_type lapack
      verbosity 1
      reduce_gvec true
    &END CONTROL
    &PARAMETERS
      electronic_structure_method pseudopotential
      smearing_width 0.02
      use_symmetry true
      num_mag_dims 1
      gk_cutoff 6.0
      pw_cutoff 25.00
      energy_tol 1e-8
      num_dft_iter 100
      k_grid 2 2 2
    &END PARAMETERS
    &ITERATIVE_SOLVER
      energy_tolerance 1e-2
      residual_tolerance 1e-6
      num_steps 20
      subspace_size 4
      type davidson
      converge_by_energy 1
    &END ITERATIVE_SOLVER
    &MIXER
      beta 0.7
      type broyden1
      max_history 8
    &END MIXER
  &END PW_DFT
  &DFT
     &XC
      &XC_FUNCTIONAL
        &LIBXC
          FUNCTIONAL XC_LDA_X
        &END LIBXC
        &LIBXC
          FUNCTIONAL XC_LDA_C_PZ
        &END LIBXC
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.5415878223 5.5415878223 5.5415878223
    &END CELL
    &COORD
      SCALED
      Fe 0.0  0.0  0.0
      Fe 0.5  0.5  0.5
    &END COORD
    &KIND Fe
      POTENTIAL UPF Fe.pbe-spn-rrkjus_psl.0.2.1.UPF.json
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Fe
  PRINT_LEVEL MEDIUM
&END GLOBAL
