@SET NREP 2
&FORCE_EVAL
  &DFT
    &QS
      METHOD xTB
      &xTB
         DO_EWALD T
         &PARAMETER
             DISPERSION_PARAMETER_FILE dftd3.dat
         &END PARAMETER
      &END XTB
    &END QS
    &POISSON
      &EWALD
       ALPHA 1.0
       EWALD_TYPE SPME
       GMAX 25
      &END EWALD
    &END POISSON
    &SCF
      SCF_GUESS MOPAC
      MAX_SCF  100
      EPS_SCF 1.e-5
      &MIXING
          METHOD DIRECT_P_MIXING
          ALPHA   0.40
      &END
    &END SCF
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 5.431 5.431 5.431
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
     SCALED
     Si     0.000000    0.000000    0.000000
     Si     0.490000    0.500000    0.000000
     Si     0.500000    0.000000    0.500000
     Si     0.000000    0.500000    0.500000
     Si     0.255000    0.250000    0.250000
     Si     0.250000    0.755000    0.750000
     Si     0.750000    0.250000    0.755000
     Si     0.750000    0.750000    0.255000
    &END COORD
  &END SUBSYS
  STRESS_TENSOR ANALYTICAL
&END FORCE_EVAL
&GLOBAL
  PROJECT Si
  RUN_TYPE DEBUG       
  PRINT_LEVEL LOW
&END GLOBAL
&DEBUG
   DEBUG_FORCES F
   DEBUG_STRESS_TENSOR T
   DX 0.001
   EPS_NO_ERROR_CHECK  0.000001
   STOP_ON_MISMATCH T
&END DEBUG
