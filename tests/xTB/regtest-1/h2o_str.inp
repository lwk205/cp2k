@SET NREP 2
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    &QS
      METHOD xTB 
      &xTB
        DO_EWALD            T
      &END 
      EPS_DEFAULT 1.E-14
    &END QS
    &SCF
      SCF_GUESS MOPAC
      &MIXING
          METHOD DIRECT_P_MIXING
          ALPHA   0.25
      &END
      MAX_SCF  200
      EPS_SCF 1.e-10
    &END SCF
    &KPOINTS
       SCHEME  NONE 
    &END KPOINTS
    &POISSON
      &EWALD
         ALPHA  3.0
      &END EWALD
    &END POISSON
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 7.0 7.0 7.0   
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
    O                  -4.583   5.333   1.560   
    H                  -3.777   5.331   0.943  
    H                  -5.081   4.589   1.176 
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT h2o
  RUN_TYPE DEBUG
  PRINT_LEVEL LOW
&END GLOBAL
&DEBUG
   DEBUG_FORCES F
   DEBUG_STRESS_TENSOR T
   DX 0.0002
   EPS_NO_ERROR_CHECK  0.0001
   STOP_ON_MISMATCH T
&END DEBUG

